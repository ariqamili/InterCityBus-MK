@model InterCityBus_MK.ViewModels.TripFormViewModel

@{
    ViewData["Title"] = "Shto Udhëtim";
}

<div class="row justify-content-center">
    <div class="col-md-6 border p-4 shadow-sm bg-light rounded">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="CompanyId" class="form-label">Kompania</label>
                <select asp-for="CompanyId" class="form-select" asp-items="@(new SelectList(Model.Companies, "Id", "Name"))">
                    <option value="">-- Zgjidh Kompaninë --</option>
                </select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FromStationId" class="form-label">Stacioni i Nisjes</label>
                    <select asp-for="FromStationId" class="form-select" asp-items="@(new SelectList(Model.Stations, "Id", "Name"))">
                        <option value="">-- Prej --</option>
                    </select>
                    <span asp-validation-for="FromStationId" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ToStationId" class="form-label">Destinacioni</label>
                    <select asp-for="ToStationId" class="form-select" asp-items="@(new SelectList(Model.Stations, "Id", "Name"))">
                        <option value="">-- Tek --</option>
                    </select>
                    <span asp-validation-for="ToStationId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DepartureTime" class="form-label">Ora e Nisjes</label>
                    <input asp-for="DepartureTime" class="form-control" type="time" />
                    <span asp-validation-for="DepartureTime" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ArrivalTime" class="form-label">Ora e Mbërritjes</label>
                    <input asp-for="ArrivalTime" class="form-control" type="time" />
                    <span asp-validation-for="ArrivalTime" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label">Çmimi (MKD)</label>
                <input asp-for="Price" class="form-control" placeholder="0.00" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success">Ruaj Udhëtimin</button>
                <a asp-action="Index" class="btn btn-secondary">Kthehu te Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}