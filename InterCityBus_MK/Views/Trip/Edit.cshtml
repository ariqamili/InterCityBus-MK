@model InterCityBus_MK.ViewModels.TripFormViewModel

@{
    ViewData["Title"] = "Edito Udhëtimin";
}

<div class="row justify-content-center">
    <div class="col-md-6 border p-4 shadow-sm bg-light rounded">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <hr />
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="CompanyId" class="form-label">Kompania</label>
                <select asp-for="CompanyId" class="form-select" asp-items="@(new SelectList(Model.Companies, "Id", "Name"))"></select>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FromStationId" class="form-label">Nga</label>
                    <select asp-for="FromStationId" class="form-select" asp-items="@(new SelectList(Model.Stations, "Id", "Name"))"></select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ToStationId" class="form-label">Tek</label>
                    <select asp-for="ToStationId" class="form-select" asp-items="@(new SelectList(Model.Stations, "Id", "Name"))"></select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DepartureTime" class="form-label">Nisja</label>
                    <input asp-for="DepartureTime" class="form-control" type="time" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ArrivalTime" class="form-label">Mbërritja</label>
                    <input asp-for="ArrivalTime" class="form-control" type="time" />
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="Price" class="form-label">Çmimi</label>
                <input asp-for="Price" class="form-control" />
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-warning">Përditëso</button>
                <a asp-action="Index" class="btn btn-secondary">Anulo</a>
            </div>
        </form>
    </div>
</div>