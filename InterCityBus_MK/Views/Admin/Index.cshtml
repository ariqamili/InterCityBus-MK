@model InterCityBus_MK.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-secondary">Management Dashboard</h2>
        <span class="badge bg-primary px-3 py-2">System Administrator</span>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="display-6 text-primary mb-2">
                        <i class="bi bi-geo-alt"></i>
                    </div>
                    <h5 class="card-title text-muted text-uppercase small fw-bold">Stations</h5>
                    <h2 class="display-5 fw-bold">@Model.TotalStations</h2>
                    <a asp-controller="Station" asp-action="Index" class="btn btn-outline-primary btn-sm w-100 mt-3 stretched-link">Manage Stations</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="display-6 text-success mb-2">
                        <i class="bi bi-building"></i>
                    </div>
                    <h5 class="card-title text-muted text-uppercase small fw-bold">Companies</h5>
                    <h2 class="display-5 fw-bold">@Model.TotalCompanies</h2>
                    <a asp-controller="Company" asp-action="Index" class="btn btn-outline-success btn-sm w-100 mt-3 stretched-link">Manage Companies</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="display-6 text-warning mb-2">
                        <i class="bi bi-bus-front"></i>
                    </div>
                    <h5 class="card-title text-muted text-uppercase small fw-bold">Active Trips</h5>
                    <h2 class="display-5 fw-bold">@Model.TotalTrips</h2>
                    <a asp-controller="Trip" asp-action="Index" class="btn btn-outline-warning btn-sm w-100 mt-3 stretched-link">Manage Trips</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="display-6 text-danger mb-2">
                        <i class="bi bi-signpost-split"></i>
                    </div>
                    <h5 class="card-title text-muted text-uppercase small fw-bold">Route Stops</h5>
                    <h2 class="display-5 fw-bold">@Model.TotalStops</h2>
                    <a asp-controller="Stops" asp-action="Index" class="btn btn-outline-danger btn-sm w-100 mt-3 stretched-link">Manage Stops</a>
                </div>
            </div>
        </div>
    </div>
</div>