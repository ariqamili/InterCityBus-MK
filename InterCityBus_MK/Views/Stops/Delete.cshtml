@model InterCityBus_MK.Models.Stop

@{
    ViewData["Title"] = "Delete Stop";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb bg-transparent p-0">
                    <li class="breadcrumb-item">
                        <a asp-controller="Admin" asp-action="Index" class="text-decoration-none">
                            <i class="bi bi-house-fill me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-action="Index" class="text-decoration-none">Stops</a>
                    </li>
                    <li class="breadcrumb-item active">Delete</li>
                </ol>
            </nav>

            <div class="mb-4">
                <h2 class="fw-bold mb-2">
                    <i class="bi bi-trash-fill me-2 text-danger"></i>
                    Delete Stop
                </h2>
                <p class="text-muted">Permanently remove this stop from the route</p>
            </div>

            <div class="card border-0 shadow-sm" style="border-radius: 16px; overflow: hidden;">
                <div class="card-header py-3" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); color: white;">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Deletion
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning rounded-3 d-flex align-items-start mb-4" style="border-left: 4px solid #ffc107;">
                        <i class="bi bi-exclamation-circle-fill me-3 fs-4"></i>
                        <div>
                            <strong>Warning!</strong> Are you sure you want to delete this stop? This action cannot be undone.
                        </div>
                    </div>

                    <div class="p-4 rounded-3 mb-4" style="background-color: var(--bg-light);">
                        <h6 class="text-uppercase small fw-bold mb-3" style="color: var(--text-muted); letter-spacing: 0.5px;">
                            Stop Details
                        </h6>
                        <dl class="row mb-0">
                            <dt class="col-sm-4" style="color: var(--text-muted);">
                                <i class="bi bi-bus-front me-2"></i>Trip
                            </dt>
                            <dd class="col-sm-8 fw-bold">
                                #@Html.DisplayFor(model => model.Trip.Id)
                            </dd>
                            <dt class="col-sm-4" style="color: var(--text-muted);">
                                <i class="bi bi-geo-alt me-2"></i>Station
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Station.Name)
                            </dd>
                            <dt class="col-sm-4" style="color: var(--text-muted);">
                                <i class="bi bi-sort-numeric-down me-2"></i>Order
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.StopOrder)
                            </dd>
                            <dt class="col-sm-4" style="color: var(--text-muted);">
                                <i class="bi bi-clock me-2"></i>Arrival Time
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.ArrivalTime)
                            </dd>
                        </dl>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-3">
                            <button type="submit" class="flex-grow-1 py-3"
                                    style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
                                           color: white; border: none; border-radius: 8px; font-weight: 600;">
                                <i class="bi bi-trash-fill me-2"></i>Yes, Delete Stop
                            </button>
                            <a asp-action="Index" class="btn-outline-custom py-3 px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>