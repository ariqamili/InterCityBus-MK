@model InterCityBus_MK.Models.Company

@{
    ViewData["Title"] = "Edit Company";
}

<div class="container-fluid py-4 bg-light min-vh-100">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-2 bg-transparent p-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Admin" asp-action="Index" class="text-decoration-none text-primary">
                                <i class="bi bi-house-fill me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-action="Index" class="text-decoration-none text-primary">Companies</a>
                        </li>
                        <li class="breadcrumb-item active text-muted">Edit</li>
                    </ol>
                </nav>
                <h2 class="fw-bold text-dark mb-0">
                    <i class="bi bi-pencil-square text-warning me-2"></i>Edit Company
                </h2>
            </div>

            <!-- Form Card -->
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-warning bg-gradient py-3">
                    <h5 class="mb-0 fw-semibold text-dark">
                        <i class="bi bi-building me-2"></i>Update Company Information
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold">
                                <i class="bi bi-building text-warning me-2"></i>Company Name
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg rounded-3" placeholder="Enter company name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ContactEmail" class="form-label fw-semibold">
                                <i class="bi bi-envelope text-warning me-2"></i>Contact Email
                            </label>
                            <input asp-for="ContactEmail" class="form-control form-control-lg rounded-3" type="email" placeholder="company@example.com" />
                            <span asp-validation-for="ContactEmail" class="text-danger small"></span>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-warning btn-lg rounded-pill px-5 flex-grow-1">
                                <i class="bi bi-check-circle me-2"></i>Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .rounded-4 {
            border-radius: 1rem !important;
        }

        .form-control:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
        }

        .btn {
            transition: all 0.2s ease;
        }

            .btn:hover {
                transform: translateY(-2px);
            }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
