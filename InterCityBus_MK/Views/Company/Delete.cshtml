@model InterCityBus_MK.Models.Company

@{
    ViewData["Title"] = "Delete Company";
}

<div class="container-fluid py-4 bg-light min-vh-100">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-2 bg-transparent p-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Admin" asp-action="Index" class="text-decoration-none text-primary">
                                <i class="bi bi-house-fill me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-action="Index" class="text-decoration-none text-primary">Companies</a>
                        </li>
                        <li class="breadcrumb-item active text-muted">Delete</li>
                    </ol>
                </nav>
                <h2 class="fw-bold text-dark mb-0">
                    <i class="bi bi-trash-fill text-danger me-2"></i>Delete Company
                </h2>
            </div>

            <!-- Delete Confirmation Card -->
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden border-danger">
                <div class="card-header bg-danger bg-gradient text-white py-3">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Deletion
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning rounded-3 d-flex align-items-center mb-4" role="alert">
                        <i class="bi bi-exclamation-circle-fill me-3 fs-4"></i>
                        <div>
                            <strong>Warning!</strong> Are you sure you want to delete this company? This action cannot be undone.
                        </div>
                    </div>

                    <div class="bg-light rounded-3 p-4 mb-4">
                        <h6 class="text-muted text-uppercase small fw-bold mb-3">Company Details</h6>
                        <dl class="row mb-0">
                            <dt class="col-sm-4 text-muted">
                                <i class="bi bi-building me-2"></i>@Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-8 fw-bold text-dark fs-5">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt class="col-sm-4 text-muted">
                                <i class="bi bi-envelope me-2"></i>@Html.DisplayNameFor(model => model.ContactEmail)
                            </dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(Model.ContactEmail))
                                {
                                    <span class="text-primary">@Html.DisplayFor(model => model.ContactEmail)</span>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">No email provided</span>
                                }
                            </dd>
                        </dl>
                    </div>

                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-danger btn-lg rounded-pill px-5 flex-grow-1">
                                <i class="bi bi-trash-fill me-2"></i>Yes, Delete Company
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .rounded-4 {
            border-radius: 1rem !important;
        }

        .btn {
            transition: all 0.2s ease;
        }

            .btn:hover {
                transform: translateY(-2px);
            }
    </style>
}
