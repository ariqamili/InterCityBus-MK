@model InterCityBus_MK.Models.Company

@{
    ViewData["Title"] = "Company Details";
}

<div class="container-fluid py-4 bg-light min-vh-100">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-2 bg-transparent p-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Admin" asp-action="Index" class="text-decoration-none text-primary">
                                <i class="bi bi-house-fill me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-action="Index" class="text-decoration-none text-primary">Companies</a>
                        </li>
                        <li class="breadcrumb-item active text-muted">Details</li>
                    </ol>
                </nav>
                <h2 class="fw-bold text-dark mb-0">
                    <i class="bi bi-building-fill text-primary me-2"></i>Company Details
                </h2>
            </div>

            <!-- Details Card -->
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-primary bg-gradient text-white py-3">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-info-circle me-2"></i>@Model.Name
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 100px; height: 100px;">
                            <i class="bi bi-bus-front-fill text-success display-4"></i>
                        </div>
                        <h3 class="fw-bold text-dark mb-1">@Model.Name</h3>
                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3 py-2">
                            <i class="bi bi-check-circle me-1"></i>Active Transport Provider
                        </span>
                    </div>

                    <div class="bg-light rounded-3 p-4 mb-4">
                        <h6 class="text-muted text-uppercase small fw-bold mb-3">Contact Information</h6>
                        <dl class="row mb-0">
                            <dt class="col-sm-4 text-muted">
                                <i class="bi bi-building me-2"></i>@Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-8 fw-bold text-dark">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt class="col-sm-4 text-muted">
                                <i class="bi bi-envelope me-2"></i>@Html.DisplayNameFor(model => model.ContactEmail)
                            </dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(Model.ContactEmail))
                                {
                                    <a href="mailto:@Model.ContactEmail" class="text-primary text-decoration-none">
                                        @Html.DisplayFor(model => model.ContactEmail)
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">No email provided</span>
                                }
                            </dd>
                        </dl>
                    </div>

                    <div class="d-flex gap-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg rounded-pill px-4 flex-grow-1">
                            <i class="bi bi-pencil me-2"></i>Edit Company
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill px-4">
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .rounded-4 {
            border-radius: 1rem !important;
        }

        .btn {
            transition: all 0.2s ease;
        }

            .btn:hover {
                transform: translateY(-2px);
            }
    </style>
}
