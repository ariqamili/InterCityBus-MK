@model InterCityBus_MK.Models.Company

@{
    ViewData["Title"] = "Company Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb bg-transparent p-0">
                    <li class="breadcrumb-item">
                        <a asp-controller="Admin" asp-action="Index" class="text-decoration-none">
                            <i class="bi bi-house-fill me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-action="Index" class="text-decoration-none">Companies</a>
                    </li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </nav>

            <div class="mb-4">
                <h2 class="fw-bold mb-2">
                    <i class="bi bi-building-fill me-2" style="color: #28a745;"></i>
                    Company Details
                </h2>
            </div>

            <div class="card border-0 shadow-sm" style="border-radius: 16px; overflow: hidden;">
                <div class="card-header py-3" style="background: linear-gradient(135deg, #28a745 0%, #218838 100%); color: white;">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-info-circle me-2"></i>@Model.Name
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4 py-3">
                        <div class="d-inline-flex align-items-center justify-content-center mb-3"
                             style="width: 100px; height: 100px; border-radius: 50%;
                                    background: linear-gradient(135deg, rgba(40, 167, 69, 0.1) 0%, rgba(33, 136, 56, 0.1) 100%);">
                            <i class="bi bi-bus-front-fill display-3" style="color: #28a745;"></i>
                        </div>
                        <h3 class="fw-bold mb-2">@Model.Name</h3>
                        <span class="badge px-3 py-2"
                              style="background: linear-gradient(135deg, rgba(40, 167, 69, 0.1) 0%, rgba(33, 136, 56, 0.1) 100%);
                                     color: #28a745; border-radius: 20px; font-weight: 600;">
                            <i class="bi bi-check-circle me-1"></i>Active Provider
                        </span>
                    </div>

                    <div class="p-4 rounded-3 mb-4" style="background-color: var(--bg-light);">
                        <h6 class="text-uppercase small fw-bold mb-3" style="color: var(--text-muted); letter-spacing: 0.5px;">
                            Company Information
                        </h6>
                        <dl class="row mb-0">
                            <dt class="col-sm-4" style="color: var(--text-muted);">
                                <i class="bi bi-building me-2"></i>Company Name
                            </dt>
                            <dd class="col-sm-8 fw-bold">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt class="col-sm-4" style="color: var(--text-muted);">
                                <i class="bi bi-envelope me-2"></i>Contact Email
                            </dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(Model.ContactEmail))
                                {
                                    <a href="mailto:@Model.ContactEmail" class="text-decoration-none" style="color: #28a745;">
                                        @Html.DisplayFor(model => model.ContactEmail)
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">No email provided</span>
                                }
                            </dd>
                        </dl>
                    </div>

                    <div class="d-flex gap-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="flex-grow-1 py-3 text-center text-decoration-none"
                           style="background: linear-gradient(135deg, #ffc107 0%, #ff6f00 100%);
                                  color: white; border-radius: 8px; font-weight: 600;">
                            <i class="bi bi-pencil me-2"></i>Edit Company
                        </a>
                        <a asp-action="Index" class="btn-outline-custom py-3 px-4">
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
