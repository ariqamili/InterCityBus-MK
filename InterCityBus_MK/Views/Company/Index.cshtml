@model IEnumerable<InterCityBus_MK.Models.Company>
@{
    ViewData["Title"] = "Companies Management";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <div>
            <h2 class="fw-bold mb-2">
                <i class="bi bi-building-fill me-2" style="color: #28a745;"></i>
                Transport Companies
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 bg-transparent p-0">
                    <li class="breadcrumb-item">
                        <a asp-controller="Admin" asp-action="Index" class="text-decoration-none">
                            <i class="bi bi-house-fill me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item active">Companies</li>
                </ol>
            </nav>
        </div>
        <a asp-action="Create" class="px-4 py-3"
           style="background: linear-gradient(135deg, #28a745 0%, #218838 100%);
                  color: white; border: none; border-radius: 8px; font-weight: 600;
                  text-decoration: none; display: inline-block; transition: all 0.3s ease;">
            <i class="bi bi-plus-lg me-2"></i>Add Company
        </a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card border-0 shadow-sm h-100"
                     style="border-radius: 16px; overflow: hidden; transition: all 0.3s ease;">
                    <div class="position-relative">
                        <div class="w-100 py-3 px-4"
                             style="background: linear-gradient(135deg, rgba(40, 167, 69, 0.1) 0%, rgba(33, 136, 56, 0.1) 100%);">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="d-flex align-items-center justify-content-center"
                                         style="width: 50px; height: 50px; border-radius: 12px;
                                                    background: linear-gradient(135deg, #28a745 0%, #218838 100%);">
                                        <i class="bi bi-bus-front-fill text-white fs-4"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0 fw-bold" style="color: var(--text-dark);">
                                            @item.Name
                                        </h5>
                                        <small class="text-muted">
                                            <i class="bi bi-check-circle-fill me-1 text-success"></i>Active
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-body p-4">
                        <div class="mb-4">
                            <div class="d-flex align-items-center gap-2 mb-2">
                                <i class="bi bi-building" style="color: #28a745;"></i>
                                <span class="small text-muted">Company Name</span>
                            </div>
                            <p class="mb-0 fw-semibold">@item.Name</p>
                        </div>

                        <div class="mb-4">
                            <div class="d-flex align-items-center gap-2 mb-2">
                                <i class="bi bi-envelope" style="color: #28a745;"></i>
                                <span class="small text-muted">Contact Email</span>
                            </div>
                            @if (!string.IsNullOrEmpty(item.ContactEmail))
                            {
                                <p class="mb-0 fw-semibold text-break">@item.ContactEmail</p>
                            }
                            else
                            {
                                <p class="mb-0 text-muted fst-italic">No email provided</p>
                            }
                        </div>

                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-sm flex-grow-1"
                               style="background: linear-gradient(135deg, rgba(40, 167, 69, 0.1) 0%, rgba(33, 136, 56, 0.1) 100%);
                                          color: #28a745; border: none; border-radius: 8px; padding: 0.5rem; font-weight: 600;">
                                <i class="bi bi-eye me-1"></i>View
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-sm"
                               style="background: rgba(255, 193, 7, 0.1); color: #ff6f00;
                                          border: none; border-radius: 8px; padding: 0.5rem 1rem; font-weight: 600;">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-sm"
                               style="background: rgba(220, 53, 69, 0.1); color: #dc3545;
                                          border: none; border-radius: 8px; padding: 0.5rem 1rem; font-weight: 600;">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-building" style="font-size: 4rem; color: var(--text-muted); opacity: 0.3;"></i>
            </div>
            <h4 class="text-muted mb-3">No Companies Yet</h4>
            <p class="text-muted mb-4">Get started by adding your first transport company</p>
            <a asp-action="Create" class="px-4 py-3"
               style="background: linear-gradient(135deg, #28a745 0%, #218838 100%);
                          color: white; border: none; border-radius: 8px; font-weight: 600;
                          text-decoration: none; display: inline-block;">
                <i class="bi bi-plus-lg me-2"></i>Add Your First Company
            </a>
        </div>
    }
</div>

@section Styles {
    <style>
        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 24px rgba(40, 167, 69, 0.2) !important;
        }

        .btn:hover {
            transform: translateY(-2px);
        }

        a[style*="background: linear-gradient(135deg, #28a745"]:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(40, 167, 69, 0.3);
        }
    </style>
}