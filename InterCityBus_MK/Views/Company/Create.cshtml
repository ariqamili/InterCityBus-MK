@model InterCityBus_MK.Models.Company

@{
    ViewData["Title"] = "Add New Company";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb bg-transparent p-0">
                    <li class="breadcrumb-item">
                        <a asp-controller="Admin" asp-action="Index" class="text-decoration-none">
                            <i class="bi bi-house-fill me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-action="Index" class="text-decoration-none">Companies</a>
                    </li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </nav>

            <div class="mb-4">
                <h2 class="fw-bold mb-2">
                    <i class="bi bi-building-fill-add me-2" style="color: #28a745;"></i>
                    Add New Company
                </h2>
                <p class="text-muted">Create a new transport company</p>
            </div>

            <div class="card border-0 shadow-sm" style="border-radius: 16px; overflow: hidden;">
                <div class="card-header py-3" style="background: linear-gradient(135deg, #28a745 0%, #218838 100%); color: white;">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-info-circle me-2"></i>Company Information
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold">
                                <i class="bi bi-building me-2" style="color: #28a745;"></i>Company Name
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg"
                                   placeholder="e.g., InterCity Express"
                                   style="border-radius: 10px; border: 2px solid var(--border-color);" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ContactEmail" class="form-label fw-semibold">
                                <i class="bi bi-envelope me-2" style="color: #28a745;"></i>Contact Email
                            </label>
                            <input asp-for="ContactEmail" type="email" class="form-control form-control-lg"
                                   placeholder="company@example.com"
                                   style="border-radius: 10px; border: 2px solid var(--border-color);" />
                            <span asp-validation-for="ContactEmail" class="text-danger small"></span>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-3">
                            <button type="submit" class="flex-grow-1 py-3"
                                    style="background: linear-gradient(135deg, #28a745 0%, #218838 100%);
                                           color: white; border: none; border-radius: 8px; font-weight: 600;">
                                <i class="bi bi-check-circle me-2"></i>Create Company
                            </button>
                            <a asp-action="Index" class="btn-outline-custom py-3 px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <style>
        .form-control:focus {
            border-color: #28a745 !important;
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25) !important;
        }
    </style>
}