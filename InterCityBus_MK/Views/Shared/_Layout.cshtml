<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InterCityBus MK</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

    <style>
        :root {
            --purple-main: #667eea;
            --purple-dark: #764ba2;
            --purple-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #fcfcfc;
        }

        main {
            flex: 1;
        }

        .navbar-custom {
            background: white;
            padding: 16px 0;
            border-bottom: 1px solid #f0f0f0;
            box-shadow: 0 4px 15px rgba(0,0,0,0.03);
        }

        .navbar-brand-gradient {
            font-weight: 800;
            font-size: 1.5rem;
            background: var(--purple-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: flex;
            align-items: center;
            text-decoration: none;
        }

            .navbar-brand-gradient i {
                -webkit-text-fill-color: initial;
                color: #667eea;
                margin-right: 12px;
            }

        /* Nav Buttons */
        .admin-btn-nav {
            background: linear-gradient(135deg, #ff758c 0%, #ff7eb3 100%);
            color: white !important;
            border-radius: 50px;
            padding: 8px 20px;
            font-size: 0.85rem;
            font-weight: 700;
            border: none;
            box-shadow: 0 4px 12px rgba(255, 117, 140, 0.2);
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .logout-btn-themed {
            background: var(--purple-gradient);
            color: white !important;
            border-radius: 50px;
            padding: 8px 20px;
            font-size: 0.85rem;
            font-weight: 700;
            border: none;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.2);
        }

        .btn-purple-gradient {
            background: var(--purple-gradient);
            border: none;
            color: white !important;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.25);
        }

            .btn-purple-gradient:hover {
                transform: translateY(-1px);
                box-shadow: 0 6px 16px rgba(102, 126, 234, 0.35);
            }

        .user-pill {
            font-size: 0.9rem;
            font-weight: 700;
            color: #667eea;
            display: flex;
            align-items: center;
        }

        /* Form Styling */
        .rounded-32 {
            border-radius: 32px !important;
        }

        .fw-800 {
            font-weight: 800;
        }

        .field-label-mini {
            font-size: 0.7rem;
            font-weight: 800;
            color: #adb5bd;
            letter-spacing: 1px;
            margin-bottom: 5px;
            display: block;
            text-transform: uppercase;
        }

        .input-wrapper {
            position: relative;
            display: flex;
            align-items: center;
            border: 2px solid #f0f0f0;
            border-radius: 14px;
            background: #fdfdfd;
        }

        .icon-left {
            position: absolute;
            left: 15px;
            color: #764ba2;
        }

        .modern-input {
            width: 100%;
            padding: 12px 12px 12px 45px;
            border: none;
            background: transparent;
            font-weight: 600;
            outline: none;
        }

        .feature-icon-wrapper {
            width: 64px;
            height: 64px;
            margin: 0 auto;
            border-radius: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .footer-custom {
            background: white;
            border-top: 1px solid #eee;
            padding: 30px 0;
            margin-top: 60px;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container">
                <a class="navbar-brand-gradient" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-bus-front-fill"></i>InterCityBus MK
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto">
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-lg-3">
                                <a class="admin-btn-nav" asp-area="Admin" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-speedometer2 me-1"></i> Admin Dashboard
                                </a>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="user-pill me-3">
                                <i class="bi bi-person-circle me-2"></i>Hello, @User.Identity.Name.Split('@')[0]!
                            </div>
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="logout-btn-themed">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a class="nav-link fw-bold me-4" style="color: #667eea" asp-controller="Account" asp-action="Login">Login</a>
                            <a class="btn btn-purple-gradient rounded-pill px-4 py-2 fw-bold text-white" asp-controller="Account" asp-action="Register">Register</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">@RenderBody()</main>

    <footer class="footer-custom">
        <div class="container text-center">
            <p class="text-muted mb-0 small">&copy; 2026 - <span class="fw-bold" style="color: #764ba2;">InterCityBus MK</span></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>