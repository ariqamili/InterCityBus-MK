@model InterCityBus_MK.Models.Station

@{
    ViewData["Title"] = "Edit Station";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb bg-transparent p-0">
                    <li class="breadcrumb-item">
                        <a asp-controller="Admin" asp-action="Index" class="text-decoration-none">
                            <i class="bi bi-house-fill me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-action="Index" class="text-decoration-none">Stations</a>
                    </li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </nav>

            <div class="mb-4">
                <h2 class="fw-bold mb-2">
                    <i class="bi bi-pencil-square me-2 text-warning"></i>
                    Edit Station
                </h2>
                <p class="text-muted">Update station information</p>
            </div>

            <div class="card border-0 shadow-sm" style="border-radius: 16px; overflow: hidden;">
                <div class="card-header py-3" style="background: linear-gradient(135deg, #ffc107 0%, #ff6f00 100%); color: white;">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-building me-2"></i>Update Station Information
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold">
                                <i class="bi bi-building me-2 text-warning"></i>Station Name
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg"
                                   style="border-radius: 10px; border: 2px solid var(--border-color);" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="City" class="form-label fw-semibold">
                                <i class="bi bi-geo-alt me-2 text-warning"></i>City
                            </label>
                            <input asp-for="City" class="form-control form-control-lg"
                                   style="border-radius: 10px; border: 2px solid var(--border-color);" />
                            <span asp-validation-for="City" class="text-danger small"></span>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-3">
                            <button type="submit" class="flex-grow-1 py-3"
                                    style="background: linear-gradient(135deg, #ffc107 0%, #ff6f00 100%);
                                           color: white; border: none; border-radius: 8px; font-weight: 600;">
                                <i class="bi bi-check-circle me-2"></i>Save Changes
                            </button>
                            <a asp-action="Index" class="btn-outline-custom py-3 px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
